<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/back"
    android:paddingLeft="50dp"
    android:paddingRight="50dp" >
    
    <LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">
    
        <TextView
	    android:id="@+id/lock_1d"
	    android:layout_width="20dp"
	    android:layout_height="wrap_content"
	    android:visibility="invisible"
	    android:layout_margin="5dp"
	    android:background="@drawable/choice"
	    android:gravity="center" />
        
        <TextView
	    android:id="@+id/lock_2d"
	    android:layout_width="20dp"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:visibility="invisible"
	    android:background="@drawable/choice"
	    android:gravity="center" />
        
        <TextView
	    android:id="@+id/lock_3d"
	    android:layout_width="20dp"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:visibility="invisible"
	    android:background="@drawable/choice"
	    android:gravity="center" />
        
        <TextView
	    android:id="@+id/lock_4d"
	    android:layout_width="20dp"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:visibility="invisible"
	    android:background="@drawable/choice"
	    android:gravity="center" />
        
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">
        
        <TextView
	    android:id="@+id/checkdum1"
	    android:layout_width="20dp"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:background="@drawable/checks"
	    android:gravity="center" />
        
        <TextView
	    android:id="@+id/checkdum2"
	    android:layout_width="20dp"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:background="@drawable/checks"
	    android:gravity="center" />
        
        <TextView 
	    android:id="@+id/checkdum3"
	    android:layout_width="20dp"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:background="@drawable/checks"
	    android:gravity="center" />
        
        <TextView
	    android:id="@+id/checkdum4"
	    android:layout_width="20dp"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:background="@drawable/checks"
	    android:gravity="center" />
        
        
    </LinearLayout>
    
    <TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:paddingBottom="10dp"
	    android:text="@string/intro" 
	    android:textColor="#ffffff"/>
    
    <LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">
        
        <TextView
	    android:id="@+id/dum_1"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="@drawable/choice"
	    android:gravity="center" />
	 
	    <TextView
	    android:id="@+id/dum_2"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="@drawable/choice"
	    android:gravity="center" />
	 
	    <TextView
	    android:id="@+id/dum_3"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="@drawable/choice"
	    android:gravity="center" />
	    
	    <TextView
	    android:id="@+id/dum_4"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="@drawable/choice"
	    android:gravity="center" />
        
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">
    
        
	    
	    <TextView
	    android:id="@+id/dummy_1"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="#ff0000"
	    android:gravity="center" />
	 
	    <TextView
	    android:id="@+id/dummy_2"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="#ffd700"
	    android:gravity="center" />
	    
	    <TextView
	    android:id="@+id/dummy_3"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="#0000cd"
	    android:gravity="center" />
	    
	    
        
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">
	    
        <TextView
	    android:id="@+id/dummy_4"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="#FFFAFA"
	    android:gravity="center" />
	    
	    <TextView
	    android:id="@+id/dummy_5"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="#00ff00"
	    android:gravity="center" />
	    
	    <TextView
	    android:id="@+id/dummy_6"
	    android:layout_width="60dp"
	    android:layout_height="45dp"
	    android:layout_margin="5dp"
	    android:background="#00ffff"
	    android:gravity="center" />
    
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">
	    
        <ImageButton
        android:id="@+id/dummyButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/verify_app" />
    
    	<ImageButton
        android:id="@+id/dummy_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refresh_app" />
        
    </LinearLayout>

    
 
</LinearLayout>

